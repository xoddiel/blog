source 'https://rubygems.org'

git_source(:github) { |repo| "https://github.com/#{repo}" }

gem 'jekyll', '~> 4.3'
gem 'mini_racer'

group :jekyll_plugins do
  gem 'jekyll-haml-markup'
  gem 'jekyll-sitemap'
  gem 'jekyll-seo-tag'
  gem 'jekyll-feed'
  gem 'jekyll-minifier'
  gem 'jekyll-archives'
end

group :development do
  gem 'webrick'
end
